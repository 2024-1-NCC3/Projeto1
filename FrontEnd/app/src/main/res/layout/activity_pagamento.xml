<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Formulário de Informações do Cliente -->
    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome Completo"
        android:inputType="text"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Endereço de Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Telefone"
        android:inputType="phone"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Endereço de Cobrança"
        android:inputType="textPostalAddress"
        android:layout_marginBottom="16dp" />

    <!-- Detalhes do Pagamento -->
    <Spinner
        android:id="@+id/spinnerTipoCartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Cartão"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextNumeroCartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número do Cartão"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/editTextMesVencimento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Mês de Vencimento"
            android:inputType="number"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/editTextAnoVencimento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ano de Vencimento"
            android:inputType="number"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextCVV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:inputType="numberPassword"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextNomeCartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome no Cartão"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Opções de Pagamento -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor Total: R$ 100,00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <!-- Botões de Ação -->
    <Button
        android:id="@+id/buttonPagar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar Agora"
        android:textColor="@android:color/white" />

</LinearLayout>
