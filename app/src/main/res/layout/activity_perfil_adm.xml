<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEE1"
    tools:context=".activities.perfilAdm">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPerfil"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/rounded_login_ui"
        android:backgroundTint="#244028"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <ImageView
            android:id="@+id/btnAddFuncionario"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#94E986"
            android:onClick="IrAddFuncionario"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAddSaldo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/btnVendas"
            app:layout_constraintTop_toBottomOf="@+id/btnVendas"
            app:srcCompat="@drawable/adicionar_usuario" />

        <ImageView
            android:id="@+id/btnAddSaldo"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#94E986"
            android:onClick="IrAddSaldo"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnAddFuncionario"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/btnAddFuncionario"
            app:layout_constraintTop_toBottomOf="@+id/btnAddFuncionario"
            app:srcCompat="@drawable/saldo" />

        <ImageView
            android:id="@+id/btnEstoque"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#94E986"
            android:onClick="IrPaginaEstoque"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnVendas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/estoque" />

        <ImageView
            android:id="@+id/btnVendas"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#94E986"
            android:onClick="IrPedidosTia"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAddFuncionario"
            app:layout_constraintEnd_toEndOf="@+id/btnEstoque"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/btnEstoque"
            app:layout_constraintTop_toBottomOf="@+id/btnEstoque"
            app:srcCompat="@drawable/etiqueta" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.697"
        app:srcCompat="@drawable/comedoria_logotipo" />
</androidx.constraintlayout.widget.ConstraintLayout>